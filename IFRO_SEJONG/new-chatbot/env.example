# Docker Compose 환경 변수 설정 예시

# MySQL 데이터베이스 설정
MYSQL_ROOT_PASSWORD=1234
MYSQL_DATABASE=chatbot_db
MYSQL_USER=root
MYSQL_HOST=db
MYSQL_PORT=3306

# Django 백엔드 설정
DJANGO_SECRET_KEY=django-insecure-change-this-in-production-key-for-chatbot-backend
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,backend

# 챗봇 서버 설정
CHATBOT_URL=http://chatbot:8000

# CORS 설정
CORS_ALLOW_ALL_ORIGINS=True

# Ollama 설정
OLLAMA_HOST=ollama
OLLAMA_PORT=11434

# GPU 최적화 설정
OLLAMA_GPU_LAYERS=-1
OLLAMA_NUM_PARALLEL=4
OLLAMA_MAX_LOADED_MODELS=2
OLLAMA_FLASH_ATTENTION=1

# 한글 지원 설정
LANG=ko_KR.UTF-8
LC_ALL=ko_KR.UTF-8
LC_CTYPE=ko_KR.UTF-8
