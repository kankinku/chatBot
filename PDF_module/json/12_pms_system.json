        "ops_troubleshooting": {
            "mariadb_docker": {
                "exec": "docker exec -it mdb1 /bin/bash",
                "sql_check": [
                    "SELECT * FROM MYSQL.USER;",
                    "SHOW GRANTS FOR 'ems_user';"
                ]
            },
            "docker": {
                "commands": {
                    "ps": "docker ps -a",
                    "logs": [
                        "docker logs dgswgd_pms_web",
                        "docker logs dgswgd_pms_web > logs.txt"
                    ],
                    "build": [
                        "docker build -t dgswgd_pms_api:1.0.0 .",
                        "docker build -t dgswgd_pms_web:1.0.0 ."
                    ],
                    "save": [
                        "docker save -o dgswgd_pms_api.tar dgswgd_pms_api:1.0.0",
                        "docker save -o dgswgd_pms_web.tar dgswgd_pms_web:1.0.0"
                    ],
                    "load": [
                        "docker load -i dgswgd_pms_api.tar",
                        "docker load -i dgswgd_pms_web.tar"
                    ],
                    "run": [
                        "docker run -d --network host --name dgswgd_pms_web dgswgd_pms_api:1.0.0",
                        "docker run -d --network host --name dgswgd_pms_web dgswgd_pms_web:1.0.0"
                    ],
                    "rm": [
                        "docker rm -f dgswgd_pms_web",
                        "docker rm -f dgswgd_pms_api"
                    ],
                    "rmi": [
                        "docker rmi -f dgswgd_pms_web:1.0.0",
                        "docker rmi -f dgswgd_pms_api:1.0.0"
                    ]
                }
            }
        }
